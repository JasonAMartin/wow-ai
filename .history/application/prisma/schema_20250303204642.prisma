// Define your Prisma data model for delve runs
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model DelveRun {
  id            Int     @id @default(autoincrement())
  delveName     String
  tier          Int
  character     String
  brannLevel    Int
  brannSpec     String
  combatCurios  String? // Will store a string (e.g. "Porcelain Arrowhead Idol Rank 3/4")
  utilityCurios String? // Will store a string (e.g. "Amorphous Relic Rank 3/4")
  myItemLevel   String
  bossKillTime  String
  notes         String
  dateRun       String
  createdAt     DateTime @default(now())
}
